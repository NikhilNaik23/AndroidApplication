<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <ImageView
        android:id="@+id/imgvw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_17"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtvw1"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Enter Email or Phone Number"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgvw"
        app:layout_constraintVertical_bias="0.149" />

    <EditText
        android:id="@+id/edtvw2"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtvw1"
        app:layout_constraintVertical_bias="0.086" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="215dp"
        android:layout_height="52dp"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:text="Sign in"
        android:textColorLink="#AB8787"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtvw2"
        app:layout_constraintVertical_bias="0.143" />

</androidx.constraintlayout.widget.ConstraintLayout>