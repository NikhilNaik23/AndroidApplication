<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Practice.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Hello, Nikhil"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Learn New Stuff!"
        android:textColor="#FFFFFF"
        android:textSize="48sp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#413D3D"
            android:text="UI Design"
            android:textSize="14sp"
            android:layout_margin="2dp">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#413D3D"
            android:text="Web Development"
            android:textSize="14sp">
        </Button>

        <Button
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:backgroundTint="#413D3D"
            android:text="Android"
            android:textSize="14sp"></Button>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="296dp"
        android:background="@drawable/img_75"
        android:layout_margin="10dp">

        <Button
            android:layout_width="339dp"
            android:layout_height="50dp"
            android:backgroundTint="#329999"
            android:gravity="start"
            android:text="Search "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.934" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>